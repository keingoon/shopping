<%= form_for @user do |f| %>
  <div class="form-group">
    <%= render partial: 'shared/error_messages', locals: { model: @user } %>

    <%= f.label :name %>
    <%= f.text_field :name, id: :user_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :name_kana %>
    <%= f.text_field :name_kana, id: :user_name_kana, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, id: :user_email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, id: :user_password, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, id: :user_password_confirmation, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %> 
