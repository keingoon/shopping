<div class="container">
  <h1>商品登録</h1>
  <%= form_for(@product, url: admin_products_path) do |f| %>
    <%= render partial: 'shared/error_messages', locals: { model: @product } %>

    <div class="form-group">
      <div class="label">
        <%= f.label :company_id %>
      </div>
      <%= f.collection_select :company_id, Company.all, :id, :name, include_blank: '選択してください', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, accept: 'image/jpeg, image/jpg, image/png, image/gif' %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
