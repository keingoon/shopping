<%= form_for(@address, url: url) do |f| %>
  <div class="form-group">
    <%= f.label "郵便番号"%>
    <div>
      <%= f.number_field :zip, onKeyUp: "AjaxZip3.zip2addr(this,'','address[prefecture_id]','address[address]');" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "都道府県" %>
    <%= f.select :prefecture_id, Address.prefecture_ids, {prompt: '選択してください'}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label "住所" %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label "電話番号" %>
    <%= f.number_field :phone_number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
